{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "web-screenshot",
          "region": "asia-northeast1",
          "projectId": "global-brook-453206-b9"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}